<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
<div class="field">
 <label for="book_title">Title</label>
  <%= f.text_field :title %>
</div>
<div class="field">
  <label for="book_title">Body</label>
  <%= f.text_area :body %>
 </div> 
<div class="actions">
  <%= f.submit 'Update Book' %>
</div>  
<% end %>

<span class="to_show"><%=link_to "show", book_path(@book.id) %></span>
