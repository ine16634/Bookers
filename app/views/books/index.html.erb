
<h1>Books</h1>
<div class="book-wrap">
  <table class="table-box">
    <thead>  
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
    <% @books.each do |book| %>
      <tr>
         <td><span class="book-title"><%= book.title %></span></td>
         <td><span class="book-body"><%= book.body %></span></td>
         <td><span class="to_show"><%=link_to "Show", book_path(book.id) %></span></td>
         <td><span class="to_edit"><%=link_to "Edit", edit_book_path(book.id) %></span></td>
         <td><span class="to_destroy">
          <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
          </span></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>



<h2>New books</h2>
<% if @book.errors.any? %>
<div id="error_explanation">
  <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
   <% end %></ul>
</div>
<% end %>


<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_title">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>


